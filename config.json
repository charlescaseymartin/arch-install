{
    "additional-repositories": [],
    "archinstall-language": "English",
    "audio_config": {
        "audio": "pulseaudio"
    },
    "bootloader": "Grub",
    "config_version": "2.7.1",
    "debug": false,
    "disk_config": {
        "config_type": "pre_mounted_config",
        "mountpoint": "/mnt"
    },
    "hostname": "arch-clone",
    "kernels": [
        "linux-hardened"
    ],
    "locale_config": {
        "kb_layout": "us",
        "sys_enc": "UTF-8",
        "sys_lang": "en_US"
    },
    "network_config": {
        "type": "nm"
    },
    "no_pkg_lookups": false,
    "ntp": true,
    "offline": false,
    "packages": [
        "ufw",
        "networkmanager",
        "git",
	      "alacritty",
	      "zsh",
        "neovim",
        "firefox",
	      "rofi",
	      "curl"
    ],
    "parallel downloads": 0,
    "profile_config": {
        "gfx_driver": "All open-source",
        "greeter": "lightdm-slick-greeter",
        "profile": {
            "custom_settings": {
                "i3-wm": {}
            },
            "details": [
                "i3-wm"
            ],
            "main": "Desktop"
        }
    },
    "script": "guided",
    "silent": false,
    "skip_ntp": false,
    "skip_version_check": false,
    "swap": true,
    "timezone": "Africa/Johannesburg",
    "uki": false,
    "version": "2.7.1",
    "custom-commands": [
	    "systemctl enable ufw.service",
	    "systemctl enable NetworkManager",
	    "chsh -s $(which zsh)",
	    "sh -c '$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh | sed -e 's.#!/bin/sh.#!/usr/bin/env sh.')'",
	    "git clone https://github.com/charlescaseymartin/archlinux-moded-dotfiles.git",
      "cd archlinux-moded-dotfiles",
      "sh install.sh -i"
    ]
}
